generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x"]
}

// postgresql://postgres:postgres@db:5432/postgres?schema=public

datasource db {
  provider = "postgresql"
  url      = env("postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public")
}

model Todo {
  id          Int       @id @default(autoincrement())
  uuid        String    @unique
  description String?
  is_done     Boolean
  created_at  DateTime
  updated_at  DateTime?
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
}

model User {
  id         Int      @id @default(autoincrement())
  email      String?
  created_at DateTime
  todos      Todo[]
}
