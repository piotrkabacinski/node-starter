{
  "name": "node-starter",
  "version": "1.0.0",
  "author": "",
  "description": "Hello, Node!",
  "main": "src/index.ts",
  "scripts": {
    "test": "NODE_ENV=test jest --config ./jest.config.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.prod.json",
    "lint": "eslint ./src/**/*.ts",
    "migration:generate": "npx typeorm-ts-node-esm migration:generate ./src/db/repository/migration -d ./src/db/migration.config.ts",
    "migration:run": "npm run typeorm -- migration:run",
    "serve": "NODE_ENV=development tsx watch ./src/index.ts",
    "start": "APP_PORT=$PORT node -r tsconfig-paths/register dist/index.js",
    "typeorm": "typeorm -d ormconfig.ts migration:{run|revert}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrkabacinski/node-starter.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piotrkabacinski/node-starter/issues"
  },
  "homepage": "https://github.com/piotrkabacinski/node-starter#readme",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-openapi-validator": "^5.3.9",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/expect": "^24.3.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "22.9.0",
    "@types/pg": "^8.11.10",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "tsx": "^4.19.2",
    "typeorm-extension": "^3.6.3",
    "typescript": "^5.6.3"
  },
  "engine": {
    "node": "22.11"
  }
}
