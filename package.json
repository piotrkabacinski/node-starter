{
  "name": "hello-node",
  "version": "1.0.0",
  "description": "Hello, Node!",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc --rootDir ./src",
    "docker:install": "docker-compose run --rm app npm i",
    "docker:test": "NODE_ENV=test ts-mocha -r tsconfig-paths/register src/**/*.spec.ts --config .mocharc.jsonc --exit",
    "lint": "eslint ./src/**/*.ts",
    "migration:generate": "docker-compose run --rm app npm run typeorm -- migration:generate -n PostRefactoring",
    "migration:run": "docker-compose run --rm app npm run typeorm -- migration:run",
    "serve": "NODE_ENV=dev ts-node-dev -r tsconfig-paths/register src/index.ts --respawn --transpile-only src/index.ts",
    "start:dev": "docker-compose up",
    "start": "node dist/index.js",
    "test": "docker-compose run --rm app npm run docker:test",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrkabacinski/node.js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piotrkabacinski/node.js/issues"
  },
  "homepage": "https://github.com/piotrkabacinski/node.js#readme",
  "dependencies": {
    "@types/redis": "^2.8.28",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.10.0",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.20",
    "pg": "^8.5.1",
    "redis": "^3.0.2",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.166",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@types/pg": "^7.14.7",
    "@types/redis-mock": "^0.17.0",
    "@types/sinon": "^9.0.10",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "chai": "^4.2.0",
    "eslint": "^7.16.0",
    "mocha": "^8.2.1",
    "morgan": "^1.10.0",
    "redis-mock": "^0.56.3",
    "sinon": "^9.2.2",
    "supertest": "^6.0.1",
    "ts-mocha": "^8.0.0",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
