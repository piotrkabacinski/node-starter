{
  "name": "node-starter",
  "version": "1.0.0",
  "author": "",
  "description": "Hello, Node!",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.prod.json",
    "test": "NODE_ENV=test ts-mocha -r tsconfig-paths/register src/**/*.spec.ts --config .mocharc.jsonc",
    "lint": "eslint ./src/**/*.ts",
    "migration:generate": "npm run typeorm -- migration:generate -n PostRefactoring",
    "migration:run": "npm run typeorm -- migration:run",
    "serve": "NODE_ENV=development tsx watch ./src/index.ts",
    "start": "APP_PORT=$PORT node -r tsconfig-paths/register dist/index.js",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrkabacinski/node-starter.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piotrkabacinski/node-starter/issues"
  },
  "homepage": "https://github.com/piotrkabacinski/node-starter#readme",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-openapi-validator": "^5.3.9",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/expect": "^24.3.2",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.13",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.14.8",
    "@types/pg": "^8.11.10",
    "@types/redis": "^2.8.32",
    "@types/redis-mock": "^0.17.3",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "chai": "^5.1.2",
    "eslint": "^8.57.0",
    "mocha": "^10.8.2",
    "redis-mock": "^0.56.3",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engine": {
    "node": "20.18"
  }
}
