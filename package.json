    "bullmq": "^5.54.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.5.7",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "prisma": "^6.10.1",
