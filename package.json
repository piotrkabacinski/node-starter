  "main": "src/index.ts",
  "scripts": {
    "test": "NODE_ENV=test POSTGRES_DB=test jest --config ./jest.config.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.prod.json",
    "lint": "eslint ./src/**/*.ts",
